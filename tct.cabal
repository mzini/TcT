                    Tct.Processors

 build-depends:     base>=4.0, haskell98, containers, HaXml, mtl, qlogic==0.8, termlib==0.8, parsec, pretty, parfold, dyre, unix, filepath, directory, regex-compat, satchmo>=1.7, satchmo-backends>=1.7, array, fgl, system-uuid, time, xhtml
 hs-source-dirs:    source
 if impl(ghc < 7.0)
    ghc-options:       -threaded -Wall -O2 -fno-warn-orphans -fno-spec-constr-count
 else
    ghc-options:       -threaded -Wall -O2 -fno-warn-orphans -fno-spec-constr-count -rtsopts -with-rtsopts=-N